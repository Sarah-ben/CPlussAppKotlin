<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".BlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="13dp">
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recycler_home"/>
        </ScrollView>
        <ImageView
                android:src="@drawable/back"
                android:layout_width="0dp"
                android:layout_height="159dp" android:id="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>
        <TextView
                android:text="الأستاذ \n عبدالخالق الحاج"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" android:textColor="#ffffff"
                android:textAlignment="center" android:fontFamily="@font/droid" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/imageView4" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.426"
                android:background="#79505050"/>
        <ImageView
                android:src="@drawable/close"
                android:layout_width="27dp"
                android:layout_height="25dp" android:id="@+id/exit"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:src="@drawable/booklogo"
                android:layout_width="95dp"
                android:layout_height="128dp" android:id="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/exit"
        />
        <ImageView
                android:src="@drawable/stars"
                android:layout_width="120dp"
                android:layout_height="19dp" android:id="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5"/>
        <ImageView
                android:src="@drawable/face"
                android:layout_width="47dp"
                android:layout_height="47dp" android:id="@+id/face_home"
                app:layout_constraintStart_toEndOf="@+id/share_home" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.38" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView7"/>
        <ImageView
                android:src="@drawable/share"
                android:layout_width="47dp"
                android:layout_height="47dp" android:id="@+id/share_home"
                app:layout_constraintTop_toTopOf="@+id/face_home"
                app:layout_constraintBottom_toBottomOf="@+id/face_home"
                app:layout_constraintStart_toEndOf="@+id/imageView6" android:layout_marginStart="50dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>